{
  "expo": {
    "name": "EmpowerHer",
    "slug": "empowerher",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/login_bg.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.empowerher",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to report and track safety incidents.",
        "NSCameraUsageDescription": "This app needs access to your camera to capture images.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.empowerher",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "usesCleartextTraffic": true
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlways": false,
          "locationWhenInUse": true,
          "locationAlwaysAndWhenInUsePermission": "Allow EmpowerHer to use your location."
        }
      ],
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "0bc2dd81-3eab-4d4a-b31f-b5db6a615b19"
      }
    }
  }
}
